
{
  "manifest_version": 3,
  "name": "V2EX Topic Filter",
  "version": "1.0",
  "description": "Filters V2EX topics using Bailian AI.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://www.v2ex.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.v2ex.com/", "https://www.v2ex.com/?*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "images/*.png" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
